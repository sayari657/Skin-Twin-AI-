FROM python:3.11-slim

# Variables d'environnement
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# D√©finir le r√©pertoire de travail
WORKDIR /app

# Installer les d√©pendances syst√®me n√©cessaires (simplifi√© pour SQLite)
# Ajout des d√©pendances pour OpenCV (cv2)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libgl1 \
    libglib2.0-0 \
    curl \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Copier et installer les d√©pendances Python
# Utiliser requirements-docker.txt (sans mysqlclient, optimis√© pour Docker)
COPY docker/requirements-docker.txt /app/requirements.txt
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r /app/requirements.txt

# Copier le code de l'application backend
COPY backend/ /app/

# Cr√©er les r√©pertoires n√©cessaires
RUN mkdir -p /app/media /app/staticfiles /app/logs

# Exposer le port
EXPOSE 8000

# Script de d√©marrage - cr√©er le script avec des commandes s√©par√©es pour √©viter les probl√®mes de formatage
RUN echo '#!/bin/bash' > /app/entrypoint.sh && \
    echo 'set -e' >> /app/entrypoint.sh && \
    echo 'echo "üöÄ D√©marrage du backend Skin Twin AI..."' >> /app/entrypoint.sh && \
    echo 'echo "üì¶ Initialisation de la base de donn√©es..."' >> /app/entrypoint.sh && \
    echo 'mkdir -p /app/data && touch /app/data/db.sqlite3 && chmod 666 /app/data/db.sqlite3 || true' >> /app/entrypoint.sh && \
    echo 'echo "üì¶ Ex√©cution des migrations..."' >> /app/entrypoint.sh && \
    echo 'python manage.py migrate --noinput' >> /app/entrypoint.sh && \
    echo 'echo "üìÅ Collecte des fichiers statiques..."' >> /app/entrypoint.sh && \
    echo 'python manage.py collectstatic --noinput || true' >> /app/entrypoint.sh && \
    echo 'echo "‚úÖ D√©marrage du serveur Django..."' >> /app/entrypoint.sh && \
    echo 'exec gunicorn --bind 0.0.0.0:8000 --workers 2 --timeout 120 skin_ai.wsgi:application' >> /app/entrypoint.sh && \
    sed -i 's/\r$//' /app/entrypoint.sh && \
    chmod +x /app/entrypoint.sh

# Commande par d√©faut
CMD ["/bin/bash", "/app/entrypoint.sh"]
